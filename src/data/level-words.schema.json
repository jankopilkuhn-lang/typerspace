{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TyperSpace Level Words Configuration",
  "description": "Wortlisten für verschiedene Schwierigkeitsstufen in TyperSpace",
  "type": "object",
  "properties": {
    "levels": {
      "type": "object",
      "patternProperties": {
        "^[a-z_]+$": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "description": "Anzeigename des Levels"
            },
            "description": {
              "type": "string",
              "description": "Beschreibung des Schwierigkeitsgrads"
            },
            "words": {
              "type": "array",
              "items": {
                "type": "string",
                "minLength": 1
              },
              "minItems": 1,
              "description": "Liste der Wörter für dieses Level"
            }
          },
          "required": ["name", "description", "words"]
        }
      }
    }
  },
  "required": ["levels"]
}
